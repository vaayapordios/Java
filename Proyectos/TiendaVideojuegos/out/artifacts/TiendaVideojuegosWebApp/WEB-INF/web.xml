<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>RegistrarClienteServlet</servlet-name>
        <servlet-class>com.svalero.tiendavideojuegos.servlet.RegistrarClienteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarClienteServlet</servlet-name>
        <url-pattern>/RegistrarCliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListarClientesServlet</servlet-name>
        <servlet-class>com.svalero.tiendavideojuegos.servlet.ListarClientesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarClientesServlet</servlet-name>
        <url-pattern>/listarClientes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrarEmpleadoServlet</servlet-name>
        <servlet-class>com.svalero.tiendavideojuegos.servlet.RegistrarEmpleadoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarEmpleadoServlet</servlet-name>
        <url-pattern>/RegistrarEmpleado</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrarJuegoServlet</servlet-name>
        <servlet-class>com.svalero.tiendavideojuegos.servlet.RegistrarJuegoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarJuegoServlet</servlet-name>
        <url-pattern>/RegistrarJuego</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListarJuegosServlet</servlet-name>
        <servlet-class>com.svalero.tiendavideojuegos.servlet.ListarJuegosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarJuegosServlet</servlet-name>
        <url-pattern>/listarJuegos</url-pattern>
    </servlet-mapping>

</web-app>
